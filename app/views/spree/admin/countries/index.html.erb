<% content_for :page_title do %>
  <%= plural_resource_name(Spree::Country) %>
<% end %>

<% content_for :page_actions do %>
  <%= link_to_with_icon(Spree.t(:new_country), new_object_url, { class: "btn-primary btn", icon: 'plus-square.svg', id: 'admin_new_country' }) %>
<% end if can? :create, Spree::Country %>

<% content_for :index_table do %>
  <g-responsive>
    <g-table id='listing_countries' data-hook>
      <g-thead>
        <g-tr style="grid-template-columns: 2fr 1fr 1fr 1fr 1fr ;">
          <g-th><%= Spree.t(:country_name) %></g-th>
          <g-th class="text-center"><%= Spree.t(:iso3) %></g-th>
          <g-th class="text-center"><%= Spree.t(:states_required) %></g-th>
          <g-th class="text-center"><%= Spree.t(:zipcode_required) %></g-th>
          <g-th class="actions text-end"> </g-th>
        </g-tr>
      </g-thead>
      <g-tbody>
        <%= render partial: "countries_list" %>
      </g-tbody>
    </g-table>
  </g-responsive>
<% end %>

