<% content_for :page_title do %>
  <%= link_to Spree.t(:all_countries), spree.admin_countries_url %> / <%= @country.name %>
<% end %>

<% content_for :page_actions do %>
  <%= remote_form_submit_button(@country) %>
<% end %>

<%= form_with model: [:admin, @country], data: {controller: "form-state"}, id: 'mainForm' do |f| %>
  <%= render partial: 'form', locals: { f: f } %>
<% end %>

<% if @country.states_required? %>
  <%= turbo_frame_tag :country_states do %>
    <%= render 'states_list' %>
  <% end %>
<% end %>
