<div class="row">
  <div class="col-12 col-md-4">
    <%= f.field_container :title do %>
      <%= f.text_field :title %>
      <%= f.label :title, I18n.t('spree.admin.cms.title') %>
    <% end %>

    <%= f.field_container :subtitle do %>
      <%= f.text_field :subtitle %>
      <%= f.label :subtitle, I18n.t('spree.admin.cms.subtitle') %>
    <% end %>

    <%= f.field_container :button_text do %>
      <%= f.text_field :button_text %>
      <%= f.label :button_text, I18n.t('spree.admin.cms.button_text') %>
    <% end %>

    <%= f.field_container :gutters do %>
      <%= f.select(:gutters, @cms_section.gutters_sizes, {include_blank: false}) %>
      <%= f.label :gutters, I18n.t('spree.admin.cms.gutters') %>
    <% end %>

  </div>
  <div class="col-12 col-md-8">
    <%= f.field_container :rte_content, data: { controller: 'tiptap--editor'}, class: ['none'] do %>
      <%= render partial: 'spree/admin/shared/editor_buttons' %>
      <%= f.text_field :rte_content, { class: 'd-none', data: { tiptap__editor_target: "input", form_state_target: "watch" }} %>
    <% end %>
  </div>
  <div class="col-12"><hr></div>
    <div class="col-12 col-md-6">
      <%= f.field_container :linked_resource_type  do %>
        <%= f.select(:linked_resource_type, spree_humanize_dropdown_values('Spree::Cms::Sections::FeaturedArticle',
                                          { const: 'LINKED_RESOURCE_TYPE' }),
                                          {include_blank: false}) %>
        <%= f.label :linked_resource_type, I18n.t('spree.admin.navigation.link_to') %>
      <% end %>
    </div>
    <div class="col-12 col-md-6">
      <%= render "spree/admin/shared/link_fields", resource: @cms_section, f: f %>
    </div>
</div>
