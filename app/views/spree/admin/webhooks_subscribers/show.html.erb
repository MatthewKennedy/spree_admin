<% content_for :page_title do %>
  <%= link_to I18n.t('spree.dash.webhooks.subscribers.subscribers'), spree.admin_webhooks_subscribers_path %> /
  <%= I18n.t('spree.dash.webhooks.subscribers.webhooks_events') %>
<% end %>

<fieldset>
  <div class="table-responsive border rounded bg-white">
    <table class="table border rounded">
      <tr>
        <td><strong><%= I18n.t('spree.dash.url') %></strong></td>
        <td><%= @webhooks_subscriber.url %></td>
      </tr>
      <tr>
        <td><strong><%= I18n.t('spree.dash.active') %></strong></td>
        <td><%= active_badge(@webhooks_subscriber.active) %></td>
      </tr>
      <tr>
        <td><strong><%= I18n.t('spree.dash.webhooks.subscribers.subscriptions') %></strong></td>
        <td><%= @webhooks_subscriber.subscriptions&.join(', ') %></td>
      </tr>
    </table>
  </div>
</fieldset>

<% if @events.any? %>
  <div class="table-responsive border rounded bg-white">
    <table class="table">
      <thead class="text-muted">
      <tr>
        <th><%= I18n.t('spree.dash.name') %></th>
        <th><%= I18n.t('spree.dash.successful') %></th>
        <th><%= I18n.t('spree.dash.created_at') %></th>
        <th><%= I18n.t('spree.dash.response_code') %></th>
        <th><%= I18n.t('spree.dash.execution_time') %></th>
        <th><%= I18n.t('spree.dash.request_errors') %></th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% @events.each do |event| %>
        <tr id="<%= dom_id(event) %>">
          <td><%= event.name %></td>
          <td><%= active_badge(event.success) %></td>
          <td><%= event.created_at %></td>
          <td><%= event.response_code %></td>
          <td><%= event.execution_time %></td>
          <td><%= sanitize event.request_errors.gsub('[SPREE WEBHOOKS]', '') %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <%= render 'spree/admin/shared/index_table_options', collection: @events, simple: true %>

<% else %>
  <div class="text-center no-objects-found m-5">
    <%= I18n.t('spree.dash.webhooks.subscribers.no_events') %>
  </div>
<% end %>
