<%= render partial: 'spree/admin/shared/order_tabs', locals: { current: :adjustments } %>

<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @adjustment } %>

<%= form_with model: @adjustment, url: admin_order_adjustment_path(@order, @adjustment), method: :put do |f| %>
  <fieldset>
    <%= render partial: 'form', locals: { f: f } %>

    <div class="form-actions" data-hook="buttons">
      <%= button Spree.t(:continue), 'save.svg' %>
      <span class="or"><%= Spree.t(:or) %></span>
      <%= link_to_with_icon(I18n.t('spree.admin.actions.cancel'), spree.admin_order_adjustments_url(@order), icon: 'x-lg.svg') %>
    </div>
  </fieldset>
<% end %>
