<% content_for :page_title do %>
  <%= I18n.t('spree.admin.cms.all_pages') %>
<% end %>

<% content_for :page_actions do %>
  <%= link_to_with_icon(I18n.t('spree.admin.cms.add_new_page'), new_object_url, { class: "btn-primary btn", icon: 'plus-square.svg', id: 'admin_new_page' } ) %>
<% end if can? :create, Spree::CmsPage %>

<% content_for :index_table_filter_buttons do %>
  <%= link_to I18n.t('spree.admin.more_filters'), spree.filter_admin_cms_pages_path(request.query_parameters), class: "btn btn-outline-secondary", data: {turbo_frame: :offcanvas} %>
<% end %>

<% content_for :index_table do %>
  <% if @cms_pages.any? %>
    <g-responsive>
      <g-table id="pagesTable">
        <g-thead>
          <g-tr style="grid-template-columns: 1fr 1fr 1fr 2fr ;">
            <g-th><%= I18n.t('spree.admin.cms.title') %></g-th>
            <g-th><%= I18n.t('spree.admin.cms.page_type') %></g-th>
            <g-th><%= I18n.t('spree.admin.language') %></g-th>
            <g-th><%= I18n.t('spree.admin.cms.visible') %></g-th>
          </g-tr>
        </g-thead>
        <g-tbody>
          <% @cms_pages.each do |page| %>
            <g-tr style="grid-template-columns: 1fr 1fr 1fr 1fr 1fr;" id="<%= dom_id(page) %>" data-stream-exit-class="animate__fadeOut">
              <g-td>
                <%= page.title %>
              </g-td>
              <g-td>
                <%= spree_humanize_type(page.type) %>
              </g-td>
              <g-td>
                <%= locale_full_name(page.locale) %>
              </g-td>
              <g-td>
                <%= active_badge(page.visible?) %>
              </g-td>
              <g-td class="justify-content-end" data-hook="admin_pages_index_row_actions">
                 <div>
                  <%= link_to_edit(page) %>
                  <%= link_to_delete(page) if can?(:destroy, page) %>
                </div>
              </g-td>
            </g-tr>
          <% end %>
        </g-tbody>
      </g-table>
    </g-responsive>
  <% else %>
    <div class="text-center no-objects-found m-5">
      <%= raw I18n.t('spree.admin.cms.you_have_no_pages') %>
    </div>
  <% end %>
<% end %>

