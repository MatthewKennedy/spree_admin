<% content_for :page_title do %>
  <%= breadcrumb_builder(link_one_uri: spree.admin_menus_path, link_one_text: I18n.t('spree.admin.navigation.all_menus'), current_page_name: I18n.t('spree.admin.navigation.new_menu')) %>
<% end %>

<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @menu } %>
<%= form_with model: [:admin, @menu], data: {controller: "input--required"} do |f| %>
  <div class="card mb-3">
    <div class="card-header">
      <h5 class="mb-0"><%= I18n.t('spree.admin.settings') %></h5>
    </div>
    <div class="card-body">
      <%= render partial: 'form', locals: { f: f } %>
    </div>

    <div class="card-footer">
      <%= render partial: 'spree/admin/shared/resource_actions' %>
    </div>
  </div>
<% end %>
