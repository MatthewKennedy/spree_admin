<% content_for :page_title do %>
  <%= breadcrumb_builder(link_one_uri: spree.admin_menus_path, link_one_text: I18n.t('spree.admin.navigation.all_menus'), link_two_uri: spree.edit_admin_menu_path(@menu), link_two_text: @menu.name, current_page_name: I18n.t('spree.admin.navigation.new_menu_item')) %>
<% end %>

<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @menu_item } %>

<%= form_with model: [:admin, @menu, @menu_item], data: {controller: "input--required"} do |f| %>
  <%= render partial: 'form', locals: { f: f } %>
  <%= render partial: 'spree/admin/shared/resource_actions' %>
<% end %>
