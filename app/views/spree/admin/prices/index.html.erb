<%= render partial: 'spree/admin/shared/product_tabs', locals: { current: :prices } %>

<% content_for :page_actions do %>
  <%= external_page_preview_link(@product) %>
<% end %>

<form>
  <%= search_field_tag 'search', {value: ''}, {class: "form-control", autocomplete: false} %>
</form>

<%= form_tag nil do %>
  <div class="my-3">
    <%= render 'variant_prices', variant: @product.master %>
  </div>

  <div class="form-actions" data-hook="buttons">
    <%= button I18n.t('spree.dash.actions.update'), 'save.svg' %>
    <span class="or"><%= Spree.t(:or) %></span>
    <%= link_to_with_icon I18n.t('spree.dash.actions.cancel'), admin_product_path(@product), icon: 'delete.svg' %>
  </div>
<% end %>
