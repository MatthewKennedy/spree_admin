<%= turbo_frame_tag "#{plural_resource_name(@collection).downcase}-page-#{@pagy.page}" do %>
  <% @collection.each do |order| %>
    <% if order.complete? %>
        <% muted_text_class = 'text-muted' %>
      <% else %>
        <% muted_text_class = '' %>
    <% end %>

    <g-tr style=" grid-template-columns: 2fr 3fr 2fr 1fr 1fr 1fr 1fr; " class="<%= muted_text_class %>">
      <%= link_to spree.edit_admin_order_path(order), class: muted_text_class do %>
        <%= order.number %>
      <% end %>

      <%= link_to spree.edit_admin_order_path(order), class: muted_text_class do %>
        <%= order_time(@show_only_completed ? order.completed_at : order.created_at) %>
      <% end %>

      <g-td class="dropdown">
        <% if order.user %>
          <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            <%= order.email %>
          </button>
          <ul class="dropdown-menu">
            <li><%= link_to order.email, spree.edit_admin_user_path(order.user), class: 'dropdown-item' %></li>
          </ul>
        <% else %>
          <%= mail_to order.email %>
        <% end %>
      </g-td>

      <%= link_to spree.edit_admin_order_path(order) do %>
        <%= order_risk_state_badge(order) %>
      <% end %>

      <%= link_to spree.edit_admin_order_path(order) do %>
        <% if order.payment_state %>
          <%= order_payment_state_badge(order) %>
        <% end %>
      <% end %>

      <% if Spree::Order.checkout_step_names.include?(:delivery) %>
        <%= link_to spree.edit_admin_order_path(order) do %>
          <% if order.shipment_state %>
            <%= order_shipment_badge(order) %>
          <% end %>
        <% end %>
      <% end %>

      <%= link_to spree.edit_admin_order_path(order), class: muted_text_class do %>
        <%= order.display_total.to_html %>
      <% end %>
    </g-tr>
  <% end %>

  <% unless @pagy.nil? %>
    <%= render "spree/admin/shared/next_page" %>
  <% end %>
<% end %>
