<% content_for :table_filter do %>
  <div data-hook="admin_orders_index_search">

    <%= search_form_for [:admin, @search] do |f| %>
    <div class="row">

      <div class="date-range-filter col-12 col-lg-8">
        <div class="form-group">
          <%= label_tag :q_created_at_gt, Spree.t(:date_range) %>
          <div class="row pb-0">
            <div class="col-12 col-md-6 mb-3 mb-md-0">
              <%= render partial: 'spree/admin/shared/date_picker_from',  locals: { f: f,
                                                                                    from_field: :created_at_gt,
                                                                                    to_field: :created_at_lt,
                                                                                    value: params[:q][:created_at_gt],
                                                                                    data_max_date: params[:q][:created_at_lt] } %>
            </div>
            <div class="col-12 col-md-6 mt-3 mt-md-0">
              <%= render partial: 'spree/admin/shared/date_picker_to',    locals: { f: f,
                                                                                    to_field: :created_at_lt,
                                                                                    from_field: :created_at_gt,
                                                                                    value: params[:q][:created_at_lt],
                                                                                    data_min_date: params[:q][:created_at_gt] } %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-12 col-lg-4">
        <div class="form-group">
          <%= label_tag :q_number_cont, Spree.t(:search_order_number) %>
          <%= f.text_field :number_cont, class: 'form-control js-quick-search-target js-filterable' %>
        </div>
      </div>

    </div>

    <div class="row">

      <div class="col-12 col-lg-4">
        <div class="form-group">
          <%= label_tag :q_state_eq, Spree.t(:status) %>
          <%= f.select :state_eq,
            Spree::Order.state_machines[:state].states.map {|s| [I18n.t("spree.dash.order_state.#{s.name}"), s.value]},
            { include_blank: true },
            class: 'js-filterable',
            data: {controller: 'ts--select'} %>
        </div>
      </div>

      <div class="col-12 col-lg-4">
        <div class="form-group">
          <%= label_tag :q_payment_state_eq, Spree.t(:payment_state) %>
          <%= f.select :payment_state_eq, Spree::Order::PAYMENT_STATES.map {|s| [I18n.t("spree.dash.payment_states.#{s}"), s]}, { include_blank: true }, class: 'js-filterable', data: {controller: 'ts--select'} %>
        </div>
      </div>

      <div class="col-12 col-lg-4">
        <div class="form-group">
          <%= label_tag :q_shipment_state_eq, Spree.t(:shipment_state) %>
          <%= f.select :shipment_state_eq, Spree::Order::SHIPMENT_STATES.map {|s| [I18n.t("spree.dash.shipment_states.#{s}"), s]}, { include_blank: true }, class: 'js-filterable', data: {controller: 'ts--select'} %>
        </div>
      </div>

    </div>

    <div class="row">

      <div class="col-12 col-lg-4">
        <div class="form-group">
          <%= label_tag :q_bill_address_firstname_start, Spree.t(:first_name_begins_with) %>
          <%= f.text_field :bill_address_firstname_start, class: 'form-control js-filterable' %>
        </div>
      </div>

      <div class="col-12 col-lg-4">
        <div class="form-group">
          <%= label_tag :q_bill_address_lastname_start, Spree.t(:last_name_begins_with) %>
          <%= f.text_field :bill_address_lastname_start, class: 'form-control js-filterable' %>
        </div>
      </div>

      <div class="col-12 col-lg-4">
        <div class="form-group">
          <%= label_tag :q_email_cont, Spree.t(:email) %>
          <%= f.email_field :email_cont, class: 'form-control js-filterable' %>
        </div>
      </div>

    </div>

    <div class="row">

      <div class="col-12 col-lg-4">
        <div class="form-group">
          <%= label_tag :q_line_items_variant_sku_eq, Spree.t(:sku) %>
          <%= f.text_field :line_items_variant_sku_eq, class: 'form-control js-filterable' %>
        </div>
      </div>

      <div class="col-12 col-lg-4">
        <div class="form-group">
          <%= label_tag :q_promotions_id_in, Spree.t(:promotion) %>
          <%= f.select :promotions_id_in, Spree::Promotion.applied.pluck(:name, :id), { include_blank: true }, class: 'js-filterable', data: {controller: 'ts--select'} %>
        </div>
      </div>

      <div class="col-12 col-lg-4">
        <div class="form-group">
          <%= label_tag :q_channel_eq, Spree.t(:channel) %>
          <%= f.select :channel_eq, Spree::Order.distinct.pluck(:channel), { include_blank: true }, class: 'js-filterable', data: {controller: 'ts--select'} %>
        </div>
      </div>
    </div>

    <div data-hook="admin_orders_index_search_buttons" class="form-actions">
       <%= button Spree.t(:filter_results), 'search.svg' %>
    </div>

    <% end %>
  </div>

<% end %>
