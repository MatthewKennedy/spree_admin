<div data-hook="admin_user_form_fields" class="row">
  <div class="col-12">
    <%= f.field_container :email do %>
      <%= f.email_field :email, class: 'form-control', placeholder: Spree.t(:email) %>
      <%= f.label :email, Spree.t(:email), class: 'form-label' %>
    <% end %>
  </div>

  <div class="col-12 col-md-6">
    <%= f.field_container :first_name do %>
      <%= f.text_field :first_name, class: 'form-control', placeholder: Spree.t(:first_name) %>
      <%= f.label :first_name, Spree.t(:first_name), class: 'form-label' %>
    <% end %>
  </div>

  <div class="col-12 col-md-6">
    <%= f.field_container :last_name do %>
      <%= f.text_field :last_name, class: 'form-control', placeholder: Spree.t(:last_name) %>
      <%= f.label :last_name, Spree.t(:last_name), class: 'form-label' %>
    <% end %>
  </div>

  <hr>

    <div data-hook="admin_user_form_roles" class="form-group">
      <h6 class="text-muted"><%= I18n.t('spree.admin.user.roles') %></h6>
      <%= f.collection_check_boxes :spree_role_ids, Spree::Role.all, :id, :name do |role_form| %>
        <div class="form-check">
          <%= role_form.check_box id: "user_spree_role_#{role_form.object.name}", class: 'form-check-input' %>
          <%= role_form.label for: "user_spree_role_#{role_form.object.name}" %>
        </div>
      <% end %>
    </div>
  </div>

  <hr>

  <div data-hook="admin_user_form_password_fields" class="row">
    <h6 class="text-muted"><%= I18n.t('spree.admin.user.password') %></h6>
    <div class="col-12 col-md-6">
      <%= f.field_container :password do %>
        <%= f.password_field :password, class: 'form-control', placeholder: Spree.t(:password) %>
        <%= f.label :password, Spree.t(:password), class: 'form-label' %>
      <% end %>
    </div>

    <div class="col-12 col-md-6">
      <%= f.field_container :password_confirmation do %>
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: Spree.t(:confirm_password) %>
        <%= f.label :password_confirmation, Spree.t(:confirm_password), class: 'form-label' %>
      <% end %>
    </div>
  </div>
