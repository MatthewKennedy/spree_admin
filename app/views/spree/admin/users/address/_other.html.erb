<div class="col-12 col-md-8">
  <div class="card">
    <div class="card-header">
      <h5 class="card-title"><%= I18n.t('spree.admin.user.other_addresses') %></h5>
    </div>
    <div class="card-body">
      <div class="row">
        <% if @other_addresses.any? %>
          <% @other_addresses.each do |address| %>
            <div class="col-12 col-md-6">
              <div class="mb-3" id="<%= dom_id(address) %>">
                <%= render partial: 'spree/admin/shared/address/card', locals: {address: address} %>
                <div>
                  <%= form_with model: [:admin, @user],scope: :user, url: spree.update_address_admin_user_path(@user), method: :put, id: :use_for_billing_form do |f| %>
                    <%= f.hidden_field :bill_address_id, value: address.id %>
                  <% end unless address == @user.bill_address %>
                  <%= form_with model: [:admin, @user],scope: :user, url: spree.update_address_admin_user_path(@user), method: :put, id: :use_for_shipping_form do |f| %>
                    <%= f.hidden_field :ship_address_id, value: address.id %>
                  <% end unless address == @user.ship_address %>

                  <%= button(nil, "receipt.svg", "submit", {class: 'btn btn-sm btn-matching-bg', form: "use_for_billing_form"}) %>
                  <%= button(nil, "truck.svg", "submit", {class: 'btn btn-sm btn-matching-bg', form: "use_for_shipping_form"}) %>
                  <%= link_to_edit(address, url: spree.edit_admin_address_path(address, address: {user_id: @user.id}), data: {turbo_frame: :modal}) %>
                  <%= link_to_delete(address, url: spree.admin_address_path(address)) %>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="col-12">
            <callout class="callout-info">
              <h6><%= I18n.t('spree.admin.users.addresses.other_addresses') %></h6>
              <small class="text-muted"><%= I18n.t('spree.admin.users.addresses.you_have_no_unused_addresses') %></small>
            </callout>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
