<% content_for :modal_header do %>
  <h5 class="modal-title"><%= I18n.t('spree.admin.user.create_a_new_user') %></h5>
  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
<% end %>

<% content_for :modal_body do %>
  <div class="container">
    <%= form_with model: [:admin, @user], data: {action: "turbo:submit-end->modal#submitEnd", turbo_frame: :inner_main_content, turbo_action: "advance"}, id: :modal_form do |form| %>
      <%= render partial: 'form', locals: { f: form } %>
    <% end %>
  </div>
<% end %>

<% content_for :modal_footer do %>
  <%= submit_tag(I18n.t('spree.admin.actions.save'), class: "btn btn-primary", form: :modal_form) %>
<% end %>

<%= render partial: 'spree/admin/shared/modal' %>
