<% content_for :page_title do %>
  <%= breadcrumb_builder(link_one_uri: spree.admin_users_path, link_one_text: I18n.t('spree.admin.users.users'), current_page_name: Spree.t(:new_user)) %>
<% end %>

<div data-hook="admin_user_new_form_header">
  <%= render partial: 'spree/admin/shared/error_messages', locals: { target: @user } %>
</div>

<div data-hook="admin_user_new_form">
  <%= form_with model: [:admin, @user], url: spree.admin_users_url, method: :post do |f| %>
    <%= render partial: 'form', locals: { f: f } %>

    <div data-hook="admin_user_new_form_buttons">
      <%= render partial: 'spree/admin/shared/resource_actions' %>
    </div>
  <% end %>
</div>
