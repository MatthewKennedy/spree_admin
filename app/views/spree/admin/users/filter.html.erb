<%= content_for :offcanvas_title do %>
  <%= I18n.t('spree.admin.more_filters') %>
<% end %>

<%= content_for :offcanvas_content do %>
  <%= search_form_for [:admin, @search], url: spree.admin_users_path, id: "moreFilterForm", data: {controller: "form--autosave", turbo_frame: :index_table, form__reset_target: "resettable"} do |f| %>
    <div class="accordion" id="accordionPanelsStayOpenExample">
      <div class="accordion-item">
        <h2 class="accordion-header" id="panelsStayOpen-headingOne">
          <button class="accordion-button btn btn-matching-bg collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true" aria-controls="panelsStayOpen-collapseOne">
            <%= I18n.t('spree.admin.users.name_and_email') %>
          </button>
        </h2>
        <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse" aria-labelledby="panelsStayOpen-headingOne">
          <div class="accordion-body">
            <%= f.field_container :email_cont do %>
              <%= f.text_field :email_cont, class: "form-control", placeholder: I18n.t('spree.admin.users.email'), data: { action: 'form--autosave#save' } %>
              <%= f.label :email_cont, I18n.t('spree.admin.users.email') %>
            <% end %>

            <%= f.field_container :bill_address_firstname_cont do %>
              <%= f.text_field :bill_address_firstname_cont, class: "form-control", placeholder: I18n.t('spree.admin.users.first_name'), data: { action: 'form--autosave#save' } %>
              <%= f.label :bill_address_firstname_cont, I18n.t('spree.admin.users.first_name') %>
            <% end %>

            <%= f.field_container :bill_address_lastname_cont do %>
              <%= f.text_field :bill_address_lastname_cont, class: "form-control", placeholder: I18n.t('spree.admin.users.last_name'), data: { action: 'form--autosave#save' } %>
              <%= f.label :bill_address_lastname_cont, I18n.t('spree.admin.users.last_name') %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="accordion-item">
        <h2 class="accordion-header" id="panelsStayOpen-headingTwo">
          <button class="accordion-button btn btn-matching-bg collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="false" aria-controls="panelsStayOpen-collapseTwo">
            <%= I18n.t('spree.admin.products.address') %>
          </button>
        </h2>
        <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse" aria-labelledby="panelsStayOpen-headingTwo">
          <div class="accordion-body">
            <%= f.field_container :bill_address_company_cont do %>
              <%= f.text_field :bill_address_company_cont, class: "form-control", placeholder: I18n.t('spree.admin.users.company'), data: { action: 'form--autosave#save' } %>
              <%= f.label :bill_address_company_cont, I18n.t('spree.admin.users.company') %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <%= f.submit I18n.t('spree.admin.actions.filter'), data: {form__autosave_target: "submitButton"} %>
  <% end %>

  <%= content_for :offcanvas_footer do %>
    <div class="flex-fill">
      <%= link_to I18n.t('spree.admin.actions.clear_filters'), spree.admin_users_path, class: "btn btn-outline-secondary", data: {turbo_frame: :index_table, action: "form--reset#clearForm"} %>
    </div>
    <div data-hook="admin_products_index_search_buttons" class="form-actions">
      <button type="button" class="btn-primary btn" data-bs-dismiss="offcanvas" aria-label="Close"><%= I18n.t('spree.admin.actions.done') %></button>
    </div>
  <% end %>
<% end %>
<%= render partial: "spree/admin/shared/offcanvas", locals: {settings: 'offcanvas-end'} %>
