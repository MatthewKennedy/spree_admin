<% content_for :page_title do %>
  <%= breadcrumb_builder(link_one_uri: spree.admin_users_path, link_one_text: I18n.t('spree.admin.users.users'), link_two_uri: spree.edit_admin_user_path(@user), link_two_text: @user.first_name, current_page_name: I18n.t('spree.admin.user.addresses')) %>
<% end %>

<% content_for :page_actions do %>
  <%= link_to_with_icon Spree.t(:add_new_address), spree.new_admin_address_path(address: {user_id: @user.id}), class: "btn btn-secondary", icon: 'plus-square.svg', data: {turbo_frame: :modal} %>
<% end %>

<div class="row" id="defaultAddresses">
  <%= render partial: 'spree/admin/users/address/default' %>
</div>
<div class="row" id="otherAddresses">
  <%= render partial: 'spree/admin/users/address/other' %>
</div>
