<% content_for :page_title do %>
  <%= Spree.t(:users) %>
<% end %>

<% content_for :page_actions do %>
  <%= link_to_with_icon Spree.t(:new_user), spree.new_admin_user_url, class: "btn-primary btn", icon: 'plus-square.svg', id: 'admin_new_user_link', data: {turbo_frame: :modal} %>
<% end if can? :create, Spree::user_class %>

<% content_for :index_table_filter_tabs do %>
  <%#= link_to I18n.t('admin.product.all'), spree.admin_users_path, class: "#{'active' if params[:q][:spree_admin_eq] == 'admin' }" %>
  <%#= link_to I18n.t('admin.product.admin'), params.merge({q: {role_eq: :admin}}).permit!, class: "#{'active' if params[:q][:role_eq] == 'draft'}" %>
<% end %>

<% content_for :index_table_filter_buttons do %>
  <%= link_to I18n.t('spree.admin.more_filters'), spree.filter_admin_users_path(request.query_parameters), class: "btn btn-outline-secondary", data: {turbo_frame: :offcanvas} %>
<% end %>

<% content_for :index_table do %>
  <% if @users.any? %>
    <table-responsive>
      <g-table id="listing_users" class="table-striped">
        <g-thead>
          <g-tr style="--bs-columns: 5;">
            <g-th style="grid-column: span 2;">
              <%= sort_link @search,:email, Spree.t(:user), {}, {title: 'users_email'} %>
            </g-th>
            <g-th style="grid-column: span 3;">
              <%= sort_link @search,:created_at, Spree.t(:created_at), {}, {title: 'account_created'} %>
            </g-th>
          </g-tr>
        </g-thead>
        <g-tbody>
          <% @collection.each do |user| %>
            <g-tr style="--bs-columns: 5;" id="<%= dom_id(user) %>" data-stream-exit-class="animate__fadeOut">
              <g-td style="grid-column: span 2;">
                <%= link_to user.email, spree.edit_admin_user_url(user) %>
              </g-td>

              <g-td style="grid-column: span 2;">
                <%= user.created_at %>
              </g-td>

              <g-td class="justify-content-end">
                <div>
                  <%= link_to_edit(user) if can?(:edit, user) %>
                  <%= link_to_delete(user) if can?(:delete, user) %>
                </div>
              </g-td>
            </g-tr>
          <% end %>
          <% unless @pagy.nil? %>
            <%= render "next_page" %>
          <% end %>

        </g-tbody>
      </g-table>
    <table-responsive>
  <% else %>
    <div class="text-center no-objects-found m-5">
      <%= Spree.t(:no_resource_found, resource: plural_resource_name(Spree.user_class)) %>,
      <%= link_to Spree.t(:add_one), new_object_url %>!
    </div>
  <% end %>
<% end %>

