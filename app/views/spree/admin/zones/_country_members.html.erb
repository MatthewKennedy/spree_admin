<div id="country_members" data-hook="member">
  <div class="card">
    <div class="card-header d-flex">
      <div class="flex-fill">
        <h5 class="card-title"><%= Spree.t(:countries) %></h5>
      </div>
      <div>
      </div>
    </div>

    <div class="card-body">
      <%= zone_form.field_container :country_ids do %>
        <%= zone_form.collection_select :country_ids, @countries, :id, :name, {}, { disabled: @zone.new_record?, multiple: true } %>
        <%= zone_form.label :country_ids, Spree.t(:countries) %>
      <% end %>
    </div>
    <div class="card-footer">
       <%= render partial: 'spree/admin/shared/resource_actions' %>
    </div>
  </div>
</div>
