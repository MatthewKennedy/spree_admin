<%= turbo_frame_tag :offcanvas do %>
  <div class="offcanvas <%= settings %>" tabindex="-1" id="universalOffcanvas" aria-labelledby="universalOffcanvas"
       data-controller="bs-instance form--reset"
       data-bs-instance-class-value='Offcanvas'
       data-bs-instance-connection-value='show'
       data-turbo-cache="false">
    <div class="offcanvas-header">
      <h5 class="offcanvas-title" id="universalOffcanvasLabel">
        <%= yield :offcanvas_title %>
      </h5>
      <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
      <%= yield :offcanvas_content %>
    </div>
    <div class="offcanvas-footer border-top p-2 d-flex">
      <%= yield :offcanvas_footer %>
    </div>
  </div>
<% end %>
