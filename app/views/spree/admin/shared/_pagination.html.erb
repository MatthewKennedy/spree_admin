<%#
  This template is i18n-ready: if you don't use i18n, then you can replace the pagy_t
  calls with the actual strings ("&lsaquo; Prev", "Next &rsaquo;", "&hellip;").

  The link variable is set to a proc that returns the link tag.
  Usage: link.call( page_number [, text [, extra_attributes_string ]])
-%>
<% link = pagy_link_proc(pagy, link_extra: 'class="btn btn-outline-secondary" style="padding-left:0.6rem; padding-right:0.6rem;"') -%>
<%#                            -%><nav aria-label="pager"  class="pagy-bootstrap-nav" role="navigation">
<%#                            -%>  <ul class="pagination">
<% if pagy.prev                -%>    <li class="page-item prev"><%== link.call(pagy.prev, inline_svg_tag("chevron-left.svg", size: '18px * 18px', style: 'margin-bottom: 0;'), 'aria-label="previous"') %></li>
<% else                        -%>    <li class="page-item prev disabled"><a href="#" class="btn btn-outline-secondary disabled" disabled style="padding-left:0.6rem; padding-right:0.6rem;"><%== inline_svg_tag("chevron-left.svg", size: '18px * 18px', style: 'margin-bottom: 0;') %></a></li>
<% end                         -%>
<% pagy.series.each do |item| # series example: [1, :gap, 7, 8, "9", 10, 11, :gap, 36] -%>
<%   if    item.is_a?(Integer) -%>    <li class="page-item"><%== link.call(item) %></li>
<%   elsif item.is_a?(String)  -%>    <li class="page-item active"><%== link.call(item) %></li>
<%   elsif item == :gap        -%>    <li class="page-item disabled gap"><a href="#" class="page-link"><%== pagy_t('pagy.nav.gap') %></a></li>
<%   end                       -%>
<% end                         -%>
<% if pagy.next                -%>    <li class="page-item next"><%== link.call(pagy.next, inline_svg_tag("chevron-right.svg", size: '18px * 18px', style: 'margin-bottom: 0;'), 'aria-label="next"') %></li>
<% else                        -%>    <li class="page-item next disabled"><a href="#" class="btn btn-outline-secondary disabled" disabled style="padding-left:0.6rem; padding-right:0.6rem;"><%== inline_svg_tag("chevron-right.svg", size: '18px * 18px', style: 'margin-bottom: 0;') %></a></li>
<% end                         -%>
<%#                            -%>  </ul>
<%#                            -%></nav>
